doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    script(src='js/jquery-3.5.1.min.js')
    link(type="text/css" rel="stylesheet" href="/stylesheets/style.css")
    title= "Лаборатория Н"

  body
    div
      #user
        if user
          div.main-block
            p(style="font-size: 50px") Добро пожаловать, #{user.username}!
            a.faq(href="/signout") Выйти
        else
          div.main-block
            a.js-open-modal(href=0, data-modal="1") Войти
            a.js-open-modal(href=0, data-modal="2") Зарегистрироваться
            a.faq(href="/faq") FAQ
      include modals.pug


    script(src='/javascripts/modal.js')
