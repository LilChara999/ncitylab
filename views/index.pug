doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    script(src='js/jquery-3.5.1.min.js')
    link(type="text/css" rel="stylesheet" href="/stylesheets/style.css")
    title= "Лаборатория Н"

  body
    div.main-block
      #user
        if user
          p #{user.username}
        else
          div.main-block
            a.js-open-modal(href=0, data-modal="1") Войти
            a.js-open-modal(href=0, data-modal="2") Зарегистрироваться
            a.faq(href="http://ncitylab.com/faq") FAQ

    div.modal(data-modal="1")
      p.modal__cross.js-modal-close Закрыть
      p.modal_title Войти?
      div.login
        form( action='login', method='POST')
          input(type='text', name='username', placeholder='Логин', required, autofocus)
          input(type='password', name='password', placeholder='Пароль', required)
          input(class ='js-open-modal-button', type='submit', value='Войти')
          span.clearfix
          a.js-open-modal.button(href=0, data-modal="2") Зарегистрироваться
        #message
          if message
            h1 #{message}

    div.modal(data-modal="2")
      p.modal__cross.js-modal-close Закрыть
      p.modal_title Зарегистрироваться
      div.signup
        form(action='signup', method='POST')
          input(type='text', name='username', placeholder='Логин', required, autofocus)
          input(type='password', name='password', placeholder='Пароль', required)
          input(type='email', name='email', placeholder='E-mail',required)
          input(class='js-open-modal-button', type='submit', value='Зарегистрироваться')
          span.clearfix
        #message
          if message
            h1 #{message}

    div.overlay.js-overlay-modal

    script(src='/javascripts/modal.js')
