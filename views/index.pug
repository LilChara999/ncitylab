doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    script(src='js/jquery-3.5.1.min.js')
    link(type="text/css" rel="stylesheet" href="/stylesheets/style.css")
    title= "Лаборатория Н"

  body
    #user
      if user
        div.center.background
          div.menu
            a.general-button(href="/faq") FAQ
            a.general-button(href="/home") Домой
            a.general-button(href="/test") Тест!
          h1 Добро пожаловать, #{user.username}!
          a.general-button(href="/signout") Выйти
      else
        div.center
          a.js-open-modal(href=0, data-modal="1") Войти
          a.js-open-modal(href=0, data-modal="2") Зарегистрироваться
          a.faq-button(href="/faq") FAQ
    include modals.pug


    script(src='/javascripts/modal.js')
